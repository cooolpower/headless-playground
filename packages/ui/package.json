{
  "name": "@repo/ui",
  "version": "1.0.3",
  "description": "Headless React component library with 57+ accessible UI components",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "react",
    "headless",
    "ui",
    "components",
    "accessibility",
    "a11y",
    "hooks",
    "typescript"
  ],
  "author": "James",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cooolpower/headless-playground.git",
    "directory": "packages/ui"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "tsup": "^8.3.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "qrcode": "^1.5.4"
  }
}
